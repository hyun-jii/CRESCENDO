<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.crescendo.spring.user.model.dao.out.IUserOutDAO">

	<!--  반드시 select문이 있을 경우 명시해줘야한다. -->
	<!--  데이터 겹침 방지 (다른곳에서 사용할때 )  -->
	<!--  type은 VO명 id아무거나  -->
	<!--  property = vo안에 속성이름 -->
	<!--  resultMap type은 config.xml파일에서 설정해준 값 사용 -->
	<resultMap type="UserOutVO" id="userOutResultSet">
		<id column="USER_NUM" property="userNum"/>
		<result column="OUTDATE" property="outDate"/>
		<result column="REASON" property="reason"/>
	</resultMap>
	
	<!-- 탈퇴 회원 수 조회 -->
	<select id="outUserCount" resultType="java.lang.Integer">
		SELECT COUNT(*)
		FROM TBL_USER_OUT
	</select>
	
	<!-- 회원탈퇴 할 수 있는지 조회 -->
	<select id="outCount" resultType="java.lang.Integer">
		SELECT COUNT(*)
		FROM VIEW_ALL6
		WHERE USER_NUM = #{userNum} AND PRO_SHIP!='배송완료' AND PRO_SHIP!='환불'
	</select>
	
	<!-- 탈퇴하는 순간 탈퇴 테이블에 insert(TBL_USER_OUT) -->
	<insert id="userOutInsert">
		INSERT INTO TBL_USER_OUT(USER_NUM,OUTDATE,REASON) VALUES(#{userNum}, TO_CHAR(SYSDATE,'YYYY-MM-DD'), #{reason})
	</insert>
</mapper>